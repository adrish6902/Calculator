<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/appBackground"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:title="MyCalc"
        app:titleCentered="true"
        app:menu="@menu/main_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toTopOf="@id/gridView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/displayBg"
        android:orientation="vertical"
        android:padding="48dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/previousCalculationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="#80FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:maxLines="1"
            android:text="0"
            android:textColor="@color/displayText"
            android:textSize="48sp" />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        app:cardBackgroundColor="@color/GridCard"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="5"
            android:padding="16dp"
            >

            <Button android:id="@+id/btnCLear"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="C"
                android:background="@drawable/button_clear_background"/>

            <ImageButton
                android:id="@+id/btnBackspace"
                style="@style/CalculatorButton"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:background="@drawable/button_operator_background"
                android:src="@drawable/baseline_backspace_24"
                app:tint="#FFFFFF" />

            <Button android:id="@+id/btnPercent"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="%"
                android:background="@drawable/button_operator_background"/>

            <Button android:id="@+id/btnDivide"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="/"
                android:background="@drawable/button_operator_background"/>

            <Button android:id="@+id/btn7"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="7"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btn8"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="8"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btn9"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="9"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btnMultiply"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="x"
                android:background="@drawable/button_operator_background"/>

            <Button android:id="@+id/btn4"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="4"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btn5"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="5"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btn6"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="6"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btnMinus"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="-"
                android:background="@drawable/button_operator_background"/>

            <Button android:id="@+id/btn1"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="1"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btn2"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="2"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btn3"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="3"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btnPlus"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="+"
                android:background="@drawable/button_operator_background"/>

            <Button android:id="@+id/btn0"
                style="@style/CalculatorButton"
                android:layout_columnSpan="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="0"
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btnDot"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="."
                android:background="@drawable/button_background"/>

            <Button android:id="@+id/btnEquals"
                style="@style/CalculatorButton"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="="
                android:background="@drawable/button_equal_background"/>


        </GridLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>